/**
 * Funcion que carga alert
 */
function cAlert(message, idElementFocus, tipo, fnSuccessName) {

	// verifica mensaje
	var n = message.length;
	var ancho = 320;
	var alto = 170;
	if (n > 40) {
		ancho = 400;
		alto = 200;
	}

	//tipo:0
	if (tipo == "0") {
		
		var advertencia = '<div id="dialog-message" style="display:none;">'
				+ message + '</div>';
		$("body").append(advertencia);

		// carga dialog
		$("#dialog-message").dialog({
			title : "Mensaje del sistema",
			width : ancho,
			height : alto,
			modal : true,
			resizable : false,
			closeText : "Cerrar",
			buttons : {
				"Aceptar" : function() {
					
					//cerrar dialog
					$(this).dialog("close");
					
					//ejecutar funcion
					if(fnSuccessName != "" && fnSuccessName != null){
						eval(fnSuccessName);
					}
					
				}
			},
			close : function(event, ui) {

				// elimina dialog
				$("#dialog-message").remove();

				// enfoca control
				idElementFocus = "#" + $.trim(idElementFocus);
				$(idElementFocus).focus();
			}
		});

	//tipo:1
	} else if (tipo == "1") {
		
		var advertencia = '<div id="dialog-message" style="display:none;">'
				+ message + '</div>';
		$("body").append(advertencia);

		$("#dialog-message").dialog({
			title : "Mensaje del sistema",
			width : ancho,
			height : alto,
			modal : true,
			resizable : false,
			closeText : "Cerrar",
			buttons : {
				"Aceptar" : function() {
					window.location.href = "inicio.htm";
				}
			},
			close : function(event, ui) {

				// elimina dialog
				$("#dialog-message").remove();

				window.location.href = "inicio.htm";
			}
		});
	}

}

/**
 * Funcion que carga modal indTypeButton: 1: Aceptar 2: (default)Guardar,
 * Cancelar 3: Aceptar, Cancelar (dialog Confirmar)
 */
function cModal(idDivHtml, title, width, height, fnSuccessName, indTypeButton) {

	// verifica tipo de botones a mostrar
	if (indTypeButton == 1) {

		// carga modal
		$("#" + idDivHtml).dialog({
			autoOpen : true,
			width : width,
			height : height,
			modal : true,
			title : title,
			resizable : false,
			closeText : "Cerrar",
			buttons : {
				"Aceptar" : function() {
					eval(fnSuccessName);
				}
			},
			close : function() {
				$(this).dialog("close");
			}
		});

