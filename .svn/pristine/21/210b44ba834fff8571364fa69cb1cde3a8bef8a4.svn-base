	} else if (indTypeButton == 3) {
		$("#" + idDivHtml).dialog({
			autoOpen : true,
			width : width,
			height : height,
			modal : true,
			title : title,
			resizable : false,
			closeText : "Cerrar",
			buttons : {
				"Aceptar" : function() {
					eval(fnSuccessName);
