	//verificar si la generacion de pdf ha sido satisfactoria
	cAlert("&iquest;Se gener&oacute; el PDF del Acta de Celebraci&oacute;n satisfactoriamente?", null, "2", "fnVerificarGeneracionPdf(" + nroActa + ")");
