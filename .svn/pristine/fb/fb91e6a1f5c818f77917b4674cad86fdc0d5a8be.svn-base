            }
 			
 		};
		 
 		AniBean aniBean= jdbcTemplate.queryForObject(sql, new Object[] { dni },mapper); 
		 
		 if (aniBean==null) {
			 aniBean =new AniBean();
			 aniBean.setExisteDni(false);
			 
		 }else{
			 aniBean.setExisteDni(true);
		 }
		 
		 
		 
		 return aniBean; 
	}

